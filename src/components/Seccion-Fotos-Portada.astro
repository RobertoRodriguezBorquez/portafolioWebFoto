---
const { imgportada } = Astro.props;
---

<section id="fotos" class="mx-auto  grid grid-cols-1 gap-1 sm:gap-0 ">
  <!-- Contenedor principal con hover -->
  <div
    class="relative w-full h-[500px] md:h-[350px] bg-emerald-300 mb-1 sm:h-80 overflow-hidden group "
  >
    <!-- Contenedor para centrar el título -->
    <div
      class=" absolute inset-0 flex flex-col items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity  bg-black bg-opacity-50 group-hover:scale-110 transition-scale duration-1000 ease-in-out  bg-center bg-cover bg-no-repeat bg"  
    >
      <!-- Texto más grande en hover -->
      <h1
        class="text-white text-4xl font-bold mb-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out"
      >
        {imgportada.tittle}
      </h1>

      <!-- Título del álbum -->
      <h2
        class="text-white text-2xl font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-1000 ease-in-out"
      >
        {imgportada.description}
      </h2>
    </div>

    <img
      src={imgportada.foto}
      alt="Portada 1"
      class="w-full h-full object-cover transition-opacity duration-300 ease-in-out"
    />
  </div>
</section>
