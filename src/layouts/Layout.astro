---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import SocialMediaLink from "../components/Red-social.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="fade">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body
    class="bg-neutral-100 text-stone-900 dark:bg-primary dark:text-neutral-300"
  >
    <Header />
    <!-- <ViewTransitions/> -->
    <main>
      <slot />
    </main>
    
    <SocialMediaLink />
    <Footer />

    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
    <script type="module" src="/components/Gallery.astro"></script>

    <style is:global>
      :root {
        --accent: 35, 155, 86;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
    </style>
  </body>
</html>
